{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "ES2020",
    "target": "ES2015",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./build/esm",
    "noImplicitAny": true,
    "lib": ["es2016", "dom", "es5"]
  },
  "include": ["./src"],
  "exclude": [
    "node_modules",
    "**/tests/*",
    "**/__tests__/*",
    "**/test/*",
    "**/__test__/*"
  ]
}
