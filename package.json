{
  "name": "easy-npm-package-react",
  "version": "1.0.0",
  "description": "Easy to use template for new NPM packages using React library",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.mjs",
  "files": [
    "dist/"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --minify --external react",
    "test": "jest",
    "clean": "rimraf dist",
    "lint": "eslint ./src/**/*",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write ./src --loglevel error",
    "prepare": "husky install && npm run build",
    "posttest": "npm run lint"
  },
  "keywords": [
    "npm",
    "template",
    "react"
  ],
  "peerDependencies": {
    "react": "^17 || ^16.8",
    "react-dom": "^17 || ^16.8"
  },
  "devDependencies": {
    "@quassum/prettier-config": "^1.2.0",
    "@swc/core": "^1.2.149",
    "@swc/jest": "^0.2.20",
    "@testing-library/react": "^12.1.3",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/jest": "^27.4.1",
    "@types/node": "^14.18.12",
    "@types/react": "^17",
    "@types/react-dom": "^17",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "eslint": "^8.10.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.29.3",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "prettier": "^2.5.1",
    "react": "^17",
    "react-dom": "^17",
    "react-test-renderer": "^17",
    "rimraf": "^3",
    "typescript": "^4.6.2"
  },
  "homepage": "https://github.com/bring-shrubbery/easy-npm-package-react",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bring-shrubbery/easy-npm-package-react"
  },
  "bugs": {
    "url": "https://github.com/bring-shrubbery/easy-npm-package-react/issues"
  },
  "author": {
    "name": "Antoni SilvestroviÄ",
    "email": "antoni.silvestrovic@gmail.com",
    "url": "http://antoni.ai/"
  },
  "license": "MIT",
  "dependencies": {
    "tsup": "^5.11.13"
  }
}
